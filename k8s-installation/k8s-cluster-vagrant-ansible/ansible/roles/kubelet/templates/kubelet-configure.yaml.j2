apiVersion: kubelet.config.k8s.io/v1beta1
kind: KubeletConfiguration
authentication:
  anonymous:
    enabled: false
  webhook:
    enabled: true
authorization:
  mode: Webhook
clusterDomain: cluster.local
clusterDNS:
  - "{{ service_cidr | ipaddr('10') }}"
tlsCertFile: "{{ kubelet_pem }}"
tlsPrivateKeyFile: "{{ kubelet_key_pem }}"