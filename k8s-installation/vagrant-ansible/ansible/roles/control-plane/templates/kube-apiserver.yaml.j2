apiVersion: v1
kind: Pod
metadata:
  name: kube-apiserver
  namespace: kube-system
  labels:
    component: kube-apiserver
    tier: control-plane
spec:
  containers:
  - name: kube-apiserver
    image: registry.k8s.io/kube-apiserver:v{{ versions.kubernetes }}
    command:
      - /usr/local/bin/kube-apiserver
      - --bind-address={{ kube_apiserver_bind_address }}
      - --secure-port={{ kube_apiserver_port }}
      - --admission-control-config-file={{ config_dir }}/pod-security-admission.yaml
      - --enable-admission-plugins=PodSecurity
{% for arg in kube_apiserver_args %}
      - {{ arg }}
{% endfor %}
    volumeMounts:
    - name: kubernetes-config
      mountPath: /etc/kubernetes/configs
      readOnly: true
    - name: kubernetes-pki
      mountPath: /var/lib/kubernetes
      readOnly: true
    - name: etcd-pki
      mountPath: /etc/etcd
      readOnly: true
  hostNetwork: true
  volumes:
  - name: kubernetes-config
    hostPath:
      path: {{ config_dir }}
      type: Directory
  - name: kubernetes-pki
    hostPath:
      path: {{ pki_dir }}
      type: Directory
  - name: etcd-pki
    hostPath:
      path: {{ etcd_cert_dir }}
      type: Directory