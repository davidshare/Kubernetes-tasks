apiVersion: audit.k8s.io/v1
kind: Policy
rules:
  - level: Metadata
    omitStages:
      - "RequestReceived"
    resources:
      - group: ""
        resources: ["pods/log", "pods/exec"]
  - level: RequestResponse
    verbs: ["create", "update", "delete"]
    resources:
      - group: ""
        resources: ["secrets", "configmaps"]
  - level: Request
    users: ["system:unauthenticated"]