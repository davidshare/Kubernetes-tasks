[Unit]
Description=containerd container runtime 
Documentation=https://containerd.io 
After=network.target

[Service]
ExecStart=/usr/local/bin/containerd
Restart=always
RestartSec=5
Delegate=yes
KillMode=process
OOMScoreAdjust=-999
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
Type=notify
TimeoutStartSec=90
TimeoutStopSec=90

[Install]
WantedBy=multi-user.target